@model IEnumerable<MalatyaMVC.Models.Urunler>

@{
    ViewBag.Title = "HediyeKayisi";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div @*class="gallery"*@>
    <br />

    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <br />
            <h3 class="title">Hediyelik Kayısı<span>Paketleri</span></h3>
            <br />
            <p>İnternet Sayfamız Yapım Aşamasındadır. Siparişlerinizi Whatsapp, İnstagram DM veya E-Mail Üzerinden Verebilirsiniz. </p>

        </div>
        <div class="gallery-info">


            @foreach (var urunler in Model)
            {
                <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                    <a href="~/Urunler/Detay/@urunler.id"><img src="@urunler.ResimYol" class="img-responsive" alt="" /></a>

                    <div class="gallery-text simpleCart_shelfItem">
                        <h5><a class="name" href="Urunler/Detay/@urunler.id">@urunler.Baslik </a></h5>
                        <p><span class="item_price">@urunler.Fiyat ₺</span></p>
                        @*<h4 class="sizes">Sizes: <a href="#"> s</a> - <a href="#">m</a> - <a href="#">l</a> - <a href="#">xl</a> </h4>*@
                    </div>
                </div>
            }

            <div class="clearfix"></div>
        </div>
    </div>
</div>

